<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".infoverse_fragment"
    android:id="@+id/infoVerse">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top|center">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="태초에 하나님이 천지를 창조하시니라"
            android:textSize="30sp"
            android:id="@+id/tv_verseContent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="창세기 1:1절"
                android:textSize="20sp"
                android:layout_weight="1"
                android:id="@+id/tv_verseLocation"/>
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:src="@drawable/ic_baseline_share_24"
                android:id="@+id/btn_verseShare"
                android:background="#FFFFFF"
                />
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:src="@drawable/ic_baseline_content_copy_24"
                android:id="@+id/btn_verseCopy"
                android:background="#FFFFFF"
                />
            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:src="@drawable/ic_baseline_star_border_24"
                android:id="@+id/btn_verseMark"
                android:background="#FFFFFF"
                android:backgroundTint="#808080"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20sp"
            android:visibility="gone"
            android:id="@+id/ll_secondPhase">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="빈칸 순서대로 단어를 터치하세요."
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginVertical="20sp">
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:text="태초"
                    android:id="@+id/btn_word1"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:text="천지"
                    android:id="@+id/btn_word2"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10sp"
                    android:text="창조"
                    android:id="@+id/btn_word3"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="20sp"
            android:visibility="visible"
            android:id="@+id/ll_firstPhase">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="다음말씀"
                android:id="@+id/btn_nextVerse"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이전말씀"
                android:id="@+id/btn_previousVerse"/>

        </LinearLayout>


    </LinearLayout>


</FrameLayout>